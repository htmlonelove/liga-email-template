doctype html

include ../components

block variables

html(lang="ru")
  head
    // utf-8 works for most cases
    meta(charset="utf-8")
    // Forcing initial-scale shouldn't be necessary
    meta(name="viewport", content="width=device-width")
    // Use the latest (edge) version of IE rendering engine
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    // Disable auto-scale in iOS 10 Mail entirely
    meta(name="x-apple-disable-message-reformatting")
    // The title tag shows in email notifications, like Android 4.4.
    title= title

    // кастомные шрифты, используйте сервер заказчика/шрифты гугл
    link(href="http://htmlonelove.top/test/fonts/somefont.woff" rel="stylesheet" type="text/css")

    style(type="text/css")
      include ../../../../build/css/style.css

  body(width="100%" style="margin: 0!important; padding: 0 !important; mso-line-height-rule: exactly; background-color: #DFDFDF;background: #DFDFDF;")
    span(style="background-color:#333333!important;border-radius:4px 4px 0 0;color:#e7eaec;display:none!important;font-size:1px;line-height:1px;max-height:0;max-width:0;mso-hide:all!important;opacity:0;overflow:hidden;visibility:hidden")= description
    center(style="width: 100%; background-color: #DFDFDF;background: #DFDFDF;")
      div(style="width: 100%; background-color: #DFDFDF;background: #DFDFDF;word-break: normal;-webkit-text-size-adjust:none; -ms-text-size-adjust: none;line-height: normal; padding-bottom: 18px; padding-top: 18px" align="center")
        //HEADER start
        +header
        //HEADER start

        //BODY start
        block main
        //BODY end

        //FOOTER start
        +footer
        //FOOTER End
